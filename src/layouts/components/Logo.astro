---
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <p
        class="flex items-center gap-2"
        aria-label={logo_text || title}
      >
        Astro i18n
</p>    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
