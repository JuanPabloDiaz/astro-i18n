---
import config from "@/config/config.json";
import { getLangFromUrl } from "@/i18n/utils";

const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

// Get current language from URL
const lang = getLangFromUrl(Astro.url);

// Build home URL with language
const homeUrl = `/${lang}`;
---

<a href={homeUrl} class="navbar-brand block">
  {
    src || logo ? (
      <p
        class="flex items-center gap-2"
        aria-label={logo_text || title}
      >
        Astro i18n
</p>    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
